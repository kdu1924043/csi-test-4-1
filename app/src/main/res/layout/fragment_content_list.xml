<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" 커뮤니티 "
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/sortByLikesBtn"
            style="@style/CustomSquareButton"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/rightgreen"
            android:textSize="15dp"
            android:text="좋아요 ↑" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        <Button
            android:id="@+id/sortByTimeBtn1"
            style="@style/CustomSquareButton"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:backgroundTint="@color/rightgreen"
            android:textSize="15dp"
            android:text="시간 ↑" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>
            <ImageView
                android:id="@+id/contentWriteBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/baseline_create_24" />
        </LinearLayout>
    </LinearLayout>
</layout>
